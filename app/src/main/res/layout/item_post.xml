<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="post"
            type="com.bizify.data.model.CreateJobResponse" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="@dimen/dimen10dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10dp"
            android:id="@+id/ll_main"
            android:background="@color/purple_200"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_user"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:src="@drawable/ic_user"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Name : Noushad N"
                    android:text="@{post.customer}"
                    android:id="@+id/title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="Type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_mobile"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:layout_toStartOf="@+id/iv_share"
                    android:layout_below="@+id/title"
                    android:padding="2dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_share"
                    android:padding="5dp"
                    android:src="@drawable/ic_share"
                    android:layout_below="@+id/title"
                    android:layout_alignParentEnd="true"
                    >

                </androidx.appcompat.widget.AppCompatImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="Type"
                    android:layout_below="@+id/tv_mobile"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_plate"

                    android:padding="2dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_plate"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_job_no"
                        android:textColor="@color/white"
                        tools:text="Type"
                        android:layout_toStartOf="@+id/tv_status"
                        android:textSize="14sp"
                        android:padding="2dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_status"
                        android:textColor="@color/white"
                        tools:text="In Progress"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:text="@{post.status}"
                        android:padding="2dp"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#CAC7C7">

        </View>
    </androidx.cardview.widget.CardView>
</layout>
